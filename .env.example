# Realtime RAG WebSocket Service Configuration

# ==========================================
# Application Settings
# ==========================================
APP_NAME="Realtime RAG WebSocket Service"
DEBUG=false
HOST=0.0.0.0
PORT=8000

# ==========================================
# WebSocket Settings
# ==========================================
WS_PATH=/ws/realtime-asr

# ==========================================
# RAG Provider Configuration
# ==========================================
# Options: context, openai, custom
RAG_PROVIDER=context

# Context Provider Settings
CONTEXT_API_KEY=your_context_api_key_here
CONTEXT_BASE_URL=https://api.context.ai
CONTEXT_TIMEOUT=30.0

# OpenAI Provider Settings
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_BASE_URL=https://api.openai.com
# OPENAI_TIMEOUT=30.0
# OPENAI_MODEL=gpt-3.5-turbo

# Custom RAG Provider Settings
# CUSTOM_RAG_API_URL=https://your-rag-api.com/query
# CUSTOM_RAG_API_KEY=your_custom_api_key_here
# CUSTOM_RAG_TIMEOUT=30.0

# ==========================================
# Search Provider Configuration
# ==========================================
# Options: serper
# SEARCH_PROVIDER=serper

# Serper Settings
# SERPER_API_KEY=your_serper_api_key_here
# SERPER_TIMEOUT=10.0

# ==========================================
# Batch Processing Configuration
# ==========================================
BATCH_ENABLED=true
BATCH_MAX_CONCURRENT=5
BATCH_MAX_QUEUE_SIZE=1000
BATCH_STORAGE_PATH=./batch_results

# ==========================================
# Optional: Redis Configuration (for future use)
# ==========================================
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=

# ==========================================
# Optional: Database Configuration (for future use)
# ==========================================
# DATABASE_URL=postgresql://user:password@localhost/dbname
# DATABASE_POOL_SIZE=10

# ==========================================
# Logging Configuration
# ==========================================
# LOG_LEVEL=INFO
# LOG_FORMAT=json
